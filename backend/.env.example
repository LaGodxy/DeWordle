# Database Configuration
DB_HOST=your_neon_db_host
DB_PORT=5432
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_SSL=true
SSL_MODE=require

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRATION=24h
JWT_TOKEN_AUDIENCE=dewordle-users
JWT_TOKEN_ISSUER=dewordle-api
JWT_REFRESH_TOKEN_TTL=86400

# Application
PORT=3000
NODE_ENV=development
APP_NAME=Dewordle API
FRONTEND_URL=http://localhost:3000

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@dewordle.com

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLEINT_SECRET=your_google_client_secret

# Blockchain Configuration (if applicable)
CONTRACT_ADDRESS=your_contract_address
CONTRACT_ABI=your_contract_abi
ADMIN_SIGNER=your_admin_signer_key
